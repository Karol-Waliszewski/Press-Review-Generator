<article class="article">
    <h2 class="is-size-3 article__heading">{{title}} ({{category}})</h2>
    <span class="article__date">
        {{#formatDate date}}
            {{this}}
        {{/formatDate}}
    </span>
    <p class="article__text--cropped">{{text}}</p>
    <a class="article__source" href="{{sourceURL}}">Źródłó: {{source}}</a>
    <a class="button is-light is-small" href="/artykul/{{_id}}">Więcej</a>
    <div class="control">
  <button class="button is-primary">Submit</button>
</div>
</article>